<div class="row">

	<% @projects.each_slice(3) do |project| %>
		<div class="row" style="margin-bottom: 40px">
			<% project.each do |project| %>
				<div class="col-md-4">


		 			<div class="panel panel-default project-shadow">
		                <div class="panel-image hide-panel-body">
		                	<%= image_tag project.image.url, alt: "It's an image", lazy: true, class: "panel-image-preview" %>
		                </div>
		                <div class="panel-body project-details-height">
		                    <h3><%= project.name %></h3>
		                    <p>
								<%= project.shortcontent %>
								<% if project.content.length > 130 %>
									<%= link_to "view more", project_path(project) %>
								<% end %>
							</p>
		                </div>
		                <div class="panel-footer view-link" style="padding-top:10px">
							<div class="col-md-6">
								<%= link_to "View Details", project_path(project), class: "btn btn-default btn-xs btn-block"  %>
							</div>
							<div class="col-md-6">
								<% if !project.url.blank? %>
									<%= link_to project.url, :target => "_blank" do %>
										<span class="btn btn-primary btn-xs btn-block"> Visit Live App </span>
									<% end %>
								<% else %>
									<span class="label label-default label-block"> App will live soon </span>
								<% end %>
							</div>
		                </div>
		            </div>
				</div>
			<% end %>
		</div>
	<% end %>

</div>

<script language="javascript">

	$(document).ready(function(){

		$("img").lazyload({
		    threshold : 500,
		    effect : "fadeIn"
		 });
	})
</script>